{
  "name": "ensiie-test-back",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "lint": "eslint . --fix",
    "start": "node app",
    "dev": "node-dev --no-notify app",
    "test:unit": "jest --coverage",
    "test:mut": "stryker run",
    "test:api": "start-server-and-test start http://localhost:3000/api/jetpacks \"newman run tests/api/collection.json\""
  },
  "dependencies": {
    "express": "^4.16.4",
    "lowdb": "^1.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^1.1.1",
    "@stryker-mutator/html-reporter": "^1.1.1",
    "@stryker-mutator/javascript-mutator": "^1.1.1",
    "@stryker-mutator/jest-runner": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "newman": "^4.4.1",
    "node-dev": "^4.0.0",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2",
    "start-server-and-test": "^1.9.0"
  },
  "jest": {
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  }
}
